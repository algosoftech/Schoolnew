<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.algosoft.gov.school.Parents.Fee">
    <android.support.v7.widget.Toolbar
        android:id="@+id/Toolbar_fee"
        android:layout_width="match_parent"
        android:background="@color/colorYellow"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/Image_fee"
            android:layout_width="30dp"
            android:src="@drawable/back_black_24dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:text="Fee Structure"
            android:textSize="20dp"
            android:typeface="sans"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Textreceipt"
            android:layout_marginStart="80dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:text="Receipt"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/Recyclerfee"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
