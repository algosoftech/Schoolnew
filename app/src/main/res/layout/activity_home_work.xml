<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.algosoft.gov.school.Teacher.HomeWork">
    <android.support.v7.widget.Toolbar
        android:id="@+id/Toolbar_Homework"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorYellow">
        <ImageButton
            android:id="@+id/back_hw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_black_24dp"
            android:background="@color/colorYellow"
            android:padding="@dimen/dimen5" />
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:text="Daily Homework"
            android:textSize="20dp"
            android:typeface="sans"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>
    <RelativeLayout

        android:layout_margin="15dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/Image_homework"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/homeworknew" />
    <Button
        android:layout_margin="8dp"
        android:id="@+id/Givehome"
        android:text="Give Homework"
        android:background="@drawable/shapebutton"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/Image_homework"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <Button
        android:background="@drawable/shapyellow"
        android:layout_margin="8dp"
        android:id="@+id/Searchhome"
        android:layout_below="@id/Givehome"
        android:layout_width="match_parent"
        android:text="Search Homework"
        android:layout_height="40dp" />
    </RelativeLayout>
</LinearLayout>
