<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/Linear_one"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="140dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp"
        android:elevation="8dp"
        app:cardElevation="8dp">
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="140dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/ImageattendanceParent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/progressBar"
                android:layout_marginStart="14dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/attendance" />

            <TextView
                android:id="@+id/textattendanceParents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/ImageattendanceParent"
                android:layout_below="@+id/ImageattendanceParent"
                android:layout_marginTop="15dp"
                android:text="Attendance"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <ProgressBar
                android:id="@+id/progressBarParents"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="140dp"
                android:layout_height="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp"
                android:secondaryProgressTint="@color/colorYellow"
                android:progress="25" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>