<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="30dp"
        android:background="@drawable/notification"
        android:layout_height="30dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp"
        android:elevation="8dp"
        app:cardElevation="8dp">

        <LinearLayout android:id="@+id/linear_main"
            android:layout_width="match_parent"
            android:layout_marginStart="3dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Textmain"
                android:textColor="@color/colorBlue"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:text=""
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:text="26/11/18"
                android:gravity="right"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_below="@id/linear_main"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:id="@+id/Textquestion"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="What is the capital of India?"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/Card"
                    android:layout_below="@id/Textquestion"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/reply"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:id="@+id/LinearReply"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Replied"
                            android:textColor="@color/colorBlue"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="21/12/2018"
                            android:gravity="right"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Delhi"
                        android:layout_height="wrap_content" />
                </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>