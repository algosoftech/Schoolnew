<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.algosoft.gov.school.Parents.FeeDetails">
    <android.support.v7.widget.Toolbar
        android:id="@+id/Toolbar_feedetails"
        android:layout_width="match_parent"
        android:background="@color/colorYellow"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/Image_feedetails"
            android:layout_width="25dp"
            android:src="@drawable/back_black_24dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:text="Fee"
            android:textSize="20dp"
            android:typeface="sans"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp"
        android:elevation="8dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:id="@+id/Linear_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Toolbar_Received"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:padding="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:layout_height="80dp"
                android:src="@drawable/background"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorYellow"/>
            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="4"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorYellow"
                    android:padding="3dp"
                    android:textSize="20dp"
                    android:text="Manav Rachna Public School"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:padding="3dp"
                    android:textSize="18dp"
                    android:text="Name -"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:padding="3dp"
                    android:textSize="18dp"
                    android:text="Payment Mode -"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:padding="3dp"
                    android:textSize="18dp"
                    android:text="Receipt No -"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="5dp"
        android:background="@drawable/shapebutton"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:text="Particulars"
            android:gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:text="Amount"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/Recyclerfeestructure"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="5dp"
        android:background="@drawable/shapebutton"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:text="Month Fee"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:text="45366"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="5dp"
        android:background="@drawable/shapebutton"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:text="Payable Fee"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:text="12345"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="5dp"
        android:background="@drawable/shapebutton"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:text="Total Paid"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:text="54632"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
