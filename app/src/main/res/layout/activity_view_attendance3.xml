<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.algosoft.gov.school.Teacher.TakeAttendanceActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/Toolbar_attendance"
        android:layout_width="match_parent"
        android:background="@color/colorYellow"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_AttendanceBack"
            android:layout_width="25dp"
            android:src="@drawable/back_black_24dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:text="Attendance"
            android:textSize="20dp"
            android:typeface="sans"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
<RelativeLayout
    android:id="@+id/date_total_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen10"
    android:layout_below="@+id/Toolbar_attendance">
    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_students"
        android:drawablePadding="@dimen/dimen10"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/dimen20"
        android:textColor="@android:color/black"
        android:text=""
        android:textSize="@dimen/scale16"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_today_date"
        android:drawablePadding="@dimen/dimen10"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:paddingRight="@dimen/dimen20"
        android:textColor="@android:color/black"
        android:text=""
        android:textSize="@dimen/scale16"/>

</RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/RecyclerAttendancee"
        android:layout_below="@id/date_total_layout"
        android:layout_marginBottom="45dp"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/done_btn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Submit"
            android:background="@drawable/shapyellow"
            android:padding="5dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:clickable="true"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shapebutton"
            android:padding="5dp"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
