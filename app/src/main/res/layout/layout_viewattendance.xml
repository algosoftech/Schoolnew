<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dimen10"
    android:layout_marginBottom="@dimen/dimen10">
    <LinearLayout
        android:id="@+id/Linear"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:src="@drawable/studentprofile"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorYellow"/>
        <!--<ImageView-->
        <!--andrbackgroundNewound="@drawable/shapeimage"-->
        <!--android:layout_gravity="center"-->
        <!--android:id="@+id/Image_Student"-->
        <!--android:scaleType="fitEnd"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp" />-->
        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:id="@+id/Text_Name"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text=""
                android:padding="5dp"
                android:layout_height="wrap_content" />
            <!--<TableRow-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:id="@+id/Check_AP"-->
                <!--android:weightSum="2"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1" >-->
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen30"
                    android:layout_gravity="right"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:paddingRight="5dp"
                    android:orientation="horizontal" >
                    <RadioButton
                        android:id="@+id/radio_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorgray"
                        android:checked="true"
                        android:layout_weight="1"
                        android:paddingEnd="@dimen/dimen20"
                        android:paddingLeft="@dimen/dimen10"
                        android:paddingRight="@dimen/dimen10"
                        android:paddingStart="@dimen/dimen20"
                        android:typeface="sans"
                        android:text="Present"
                        android:textSize="@dimen/scale14" />

                <RadioButton
                    android:id="@+id/radio_absent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorgray"
                    android:paddingEnd="@dimen/dimen20"
                    android:paddingLeft="@dimen/dimen10"
                    android:paddingRight="@dimen/dimen10"
                    android:paddingStart="@dimen/dimen20"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_weight="1"
                    android:typeface="sans"
                    android:layout_gravity="center"
                    android:text="Absent"
                    android:textSize="@dimen/scale14"/>
                </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>